<odoo>

    <record model="ir.ui.view" id="crm_stage_form">
        <field name="name">crm.stage.form (in crm_stage_multi_company)</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form" />
        <field name="arch" type="xml">
            <field name="team_id" position="before">
                <field
                    name="company_id"
                    options="{'no_open': True, 'no_create': True}"
                    groups="base.group_multi_company"
                />
                <field name="company_id" invisible="1" />
            </field>
        </field>
    </record>

    <record id="crm_stage_tree" model="ir.ui.view">
        <field name="name">crm.stage.tree (in crm_stage_multi_company)</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree" />
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
                <field name="company_id" invisible="1" />
            </field>
        </field>
    </record>

    <record id="crm_lead_stage_search" model="ir.ui.view">
        <field name="name">Stage - Search (in crm_stage_multi_company)</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_lead_stage_search" />
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="company_id" groups="base.group_multi_company" />
                <field name="company_id" invisible="1" />
            </field>
        </field>
    </record>



</odoo>
