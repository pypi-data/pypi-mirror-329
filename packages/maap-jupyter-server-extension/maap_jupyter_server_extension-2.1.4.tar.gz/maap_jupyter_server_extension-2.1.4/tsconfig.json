{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "paths": {
      "react": [ "./node_modules/@types/react" ],
      "@lumino/widgets": ["./node_modules/@lumino/widgets"]
    },
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": ["src/*"]
}
