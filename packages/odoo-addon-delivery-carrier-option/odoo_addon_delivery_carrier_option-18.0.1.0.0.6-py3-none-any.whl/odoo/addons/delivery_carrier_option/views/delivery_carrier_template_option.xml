<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="delivery_carrier_template_option_view_form" model="ir.ui.view">
        <field name="name">delivery_base.delivery_carrier_option.view_form</field>
        <field name="model">delivery.carrier.template.option</field>
        <field name="arch" type="xml">
            <form string="delivery_carrier_option">
                <group>
                    <group>
                        <field name="name" readonly="True" />
                    </group>
                    <group>
                        <field name="partner_id" />
                        <field name="type" />
                        <field name="code" readonly="True" />
                    </group>
                    <field name="description" readonly="True" />
                </group>
            </form>
        </field>
    </record>

    <record id="delivery_carrier_template_option_view_list" model="ir.ui.view">
        <field
            name="name"
        >delivery_base.delivery_carrier_template_option.view_list</field>
        <field name="model">delivery.carrier.template.option</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id" />
                <field name="type" />
                <field name="code" />
                <field name="name" />
            </list>
        </field>
    </record>
</odoo>
