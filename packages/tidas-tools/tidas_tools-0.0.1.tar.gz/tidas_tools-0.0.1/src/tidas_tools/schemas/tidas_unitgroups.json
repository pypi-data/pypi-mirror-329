{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "unitGroupDataSet": {
      "type": "object",
      "properties": {
        "@xmlns": { "type": "string" },
        "@xmlns:common": { "type": "string" },
        "@xmlns:xsi": { "type": "string" },
        "@version": { "type": "string" },
        "@xsi:schemaLocation": { "type": "string" },
        "unitGroupInformation": {
          "type": "object",
          "properties": {
            "dataSetInformation": {
              "type": "object",
              "properties": {
                "common:UUID": { "type": "string" },
                "common:name": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "@xml:lang": { "type": "string" },
                      "#text": { "type": "string" }
                    },
                    "required": ["@xml:lang", "#text"]
                  }
                },
                "classificationInformation": {
                  "type": "object",
                  "properties": {
                    "common:classification": {
                      "type": "object",
                      "properties": {
                        "common:class": {
                          "type": "object",
                          "properties": {
                            "@level": { "type": "string" },
                            "#text": { "type": "string" }
                          },
                          "required": ["@level", "#text"]
                        }
                      }
                    }
                  }
                }
              },
              "required": ["common:UUID", "common:name"]
            },
            "quantitativeReference": {
              "type": "object",
              "properties": {
                "referenceToReferenceUnit": { "type": "integer" }
              },
              "required": ["referenceToReferenceUnit"]
            }
          },
          "required": ["dataSetInformation", "quantitativeReference"]
        },
        "modellingAndValidation": {
          "type": "object",
          "properties": {
            "complianceDeclarations": {
              "type": "object",
              "properties": {
                "compliance": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "common:referenceToComplianceSystem": {
                        "type": "object",
                        "properties": {
                          "@refObjectId": { "type": "string" },
                          "@type": { "type": "string" },
                          "@uri": { "type": "string" },
                          "@version": { "type": "string" },
                          "common:shortDescription": {
                            "type": "object",
                            "properties": {
                              "@xml:lang": { "type": "string" },
                              "#text": { "type": "string" }
                            },
                            "required": ["@xml:lang", "#text"]
                          }
                        },
                        "required": ["@refObjectId", "@type", "@uri", "@version"]
                      },
                      "common:approvalOfOverallCompliance": { "type": "string" }
                    },
                    "required": ["common:referenceToComplianceSystem", "common:approvalOfOverallCompliance"]
                  }
                }
              }
            }
          }
        },
        "units": {
          "type": "object",
          "properties": {
            "unit": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "@dataSetInternalID": { "type": "string" },
                  "name": { "type": "string" },
                  "meanValue": { "type": "number" }
                },
                "required": ["@dataSetInternalID", "name", "meanValue"]
              }
            }
          }
        }
      },
      "required": [
        "@xmlns", "@xmlns:common", "@xmlns:xsi", "@version", "@xsi:schemaLocation",
        "unitGroupInformation", "modellingAndValidation", "units"
      ]
    }
  },
  "required": ["unitGroupDataSet"]
}
