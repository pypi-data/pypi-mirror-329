{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Protobuf: compile",
      "type": "shell",
      "command": "../.venv/bin/python3 -m grpc_tools.protoc -Isrc --python_out=src --python_grpc_out=src --pyi_out=src src/momotor/rpc/proto/*.proto",
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/../.venv/bin:${env:PATH}"
        }
      },
      "group": "build",
      "presentation": {
        "reveal": "never",
        "revealProblems": "always",
        "panel": "new",
        "close": true
      },
      "problemMatcher": []
    }
  ]
}
